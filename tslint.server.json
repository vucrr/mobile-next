{
  "extends": ["tslint-config-standard", "tslint-config-prettier"],
  "rules": {
    "no-implicit-dependencies": false,
    "max-line-length": [
      true,
      400
    ],
    "no-inferrable-types": true,
    "comment-format": [
      true,
      "check-space"
    ],
    "ordered-imports": [
      true,
      {
        "import-sources-order": "lowercase-last",
        "named-imports-order": "lowercase-last"
      }
    ],
    "prefer-const": true,
    "trailing-comma": [
      true,
      {
        "multiline": {
          "objects": "always",
          "arrays": "always",
          "functions": "always",
          "exports": "always",
          "imports": "always",
          "typeLiterals": "never"
        },
        "singleline": "never",
        "esSpecCompliant": true
      }
    ],
    "quotemark": [
      true,
      "single",
      "avoid-escape",
      "jsx-double"
    ],
    "space-before-function-paren": [
      true,
      {
        "anonymous": "never",
        "named": "never",
        "asyncArrow": "always"
      }
    ]
  }
}
